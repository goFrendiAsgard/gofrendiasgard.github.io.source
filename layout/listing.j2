{% extends "topbar.j2" %}
{% from "macros.j2" import render_excerpt with context  %}

{% block jumbotron %}
<div class="starter-template" style="padding: 40px 15px; text-align:center;">
    <img src="media/img/xkcd-jump.png" />
    <h1>Blog</h1>
</div>
{% endblock %}

{% block container %}
{% block page_title %}<h1>{{ resource.meta.title }}</h1>{% endblock %}

{% for res in resource.node.walk_resources_sorted_by_time() %}
<div class="col-md-12">
    {{ render_excerpt(res) }}
</div>

{% endfor %}
{% endblock %}
